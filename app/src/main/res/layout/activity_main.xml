<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="Spotify Streamer"
        android:id="@+id/btnSpotify"
        android:layout_gravity="center_horizontal"
        android:background="#455A64"
        android:textColor="#EEEEEE"
        android:layout_marginBottom="5dp" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="Football Scores"
        android:id="@+id/btnFootball"
        android:layout_gravity="center_horizontal"
        android:background="#455A64"
        android:layout_marginBottom="5dp"
        android:textColor="#EEEEEE" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="Library"
        android:id="@+id/btnLibrary"
        android:layout_gravity="center_horizontal"
        android:background="#455A64"
        android:layout_marginBottom="5dp"
        android:textColor="#EEEEEE" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="Build it bigger"
        android:id="@+id/btnBuild"
        android:layout_gravity="center_horizontal"
        android:background="#455A64"
        android:layout_marginBottom="5dp"
        android:textColor="#EEEEEE" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="X Reader"
        android:id="@+id/btnReader"
        android:layout_gravity="center_horizontal"
        android:background="#455A64"
        android:layout_marginBottom="5dp"
        android:textColor="#EEEEEE" />

    <Button
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:text="Capstone: My own app"
        android:id="@+id/btnCapstone"
        android:layout_gravity="center_horizontal"
        android:background="#880E4F"
        android:layout_marginBottom="5dp"
        android:textColor="#EEEEEE" />
</LinearLayout>
